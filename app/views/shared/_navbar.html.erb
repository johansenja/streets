<div class="navbar-basic">
  <%= link_to root_path, class: "navbar-basic-brand" do %>
    <%= image_tag 'https://picsum.photos/200/200', alt: 'logo' %>
  <% end %>

  <form action="" class='flex-area' id="search-form">
    <formgroup class="flex-area flex-col space-between">
      <label for="from">From</label>
      <input type="text" name="from">
    </formgroup>
    <formgroup class="flex-area flex-col space-between">
      <label for="to">To</label>
      <input type="text" name="to">
    </formgroup>
    <input type="submit" value="Search" id='search-button' class='btn btn-success'>
  </form>

  <div class="navbar-basic-item">
    <div class="dropdown">
      <i class="fas fa-bars dropdown-toggle" data-toggle="dropdown" role="button"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-basic-dropdown-menu">
        <li><%= link_to 'Preferences', '#' %></li>
        <li><%= link_to 'Trips', '#' %></li>
        <li><%= link_to 'Log Out', '#' %></li>
      </ul>
    </div>
  </div>
</div>
